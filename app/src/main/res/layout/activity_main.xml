<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".MainActivity">

	<TextView
			android:id="@+id/activity_main_tv_note_content"
			style="@style/InformationTextView"
			android:text="@string/mainscreen_empty_note"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

	<ImageView
		android:id="@+id/img_empty_note"
		android:layout_width="@dimen/img_width"
		android:layout_height="@dimen/img_height"
		android:layout_marginTop="8dp"
		android:contentDescription="@string/mainscreen_empty_image"
		android:scaleType="fitCenter"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/activity_main_tv_note_content"
		app:srcCompat="@drawable/empty_note" />
</androidx.constraintlayout.widget.ConstraintLayout>